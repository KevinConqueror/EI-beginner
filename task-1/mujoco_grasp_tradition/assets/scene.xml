<mujoco model="grasp_scene">
  <include file="franka/panda.xml"/>

  <statistic center="0 0 0.5" extent="1.5"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <worldbody>
    <!-- Light -->
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    
    <!-- Floor -->
    <geom name="floor" type="plane" size="2 2 0.1" rgba="0.2 0.2 0.2 1"/>

    <!-- Table -->
    <body name="table" pos="0.3 0 0.4">
      <geom type="box" size="0.6 0.6 0.02" rgba="0.5 0.5 0.5 1" friction="1 0.005 0.0001" solimp="0.99 0.99 0.001" solref="0.002 1"/>
    </body>

    <!-- Object -->
    <body name="box" pos="0.5 0 0.5">
      <freejoint/>
      <geom type="box" size="0.025 0.025 0.025" rgba="1 0 0 1" mass="0.1" friction="2 1 0.005" solimp="0.99 0.99 0.001" solref="0.002 1"/>
    </body>
  </worldbody>
</mujoco>
